{
  "name": "webarcade",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "High-speed development framework for web and desktop applications",
  "scripts": {
    "app": "bun run kill && npx rspack build && cd app && cargo build --release",
    "app:run": "cd app/target/release && webarcade.exe",
    "kill": "npx kill-port 3000 3001 || (taskkill /F /IM node.exe 2>nul || pkill -f \"rspack\\|tauri\" 2>/dev/null || echo \"Ports cleared\")",
    "clean": "bun run kill && rm -rf app/dist app/target src-tauri/target cli/target",
    "lint": "oxlint",
    "plugin:new": "cd cli && cargo run --release -- new",
    "plugin:build": "cd cli && cargo run --release -- build",
    "plugin:list": "cd cli && cargo run --release -- list",
    "cli:build": "cd cli && cargo build --release"
  },
  "dependencies": {
    "@tabler/icons-solidjs": "^3.34.1",
    "daisyui": "^5.0.50",
    "kill-port": "^2.0.1",
    "solid-js": "^1.9.7",
    "solid-refresh": "^0.7.5"
  },
  "devDependencies": {
    "@rspack/cli": "^1.4.11",
    "@rspack/core": "^1.4.11",
    "@tailwindcss/postcss": "^4.1.12",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "babel-preset-solid": "^1.9.9",
    "concurrently": "^8.2.2",
    "esbuild": "^0.27.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "tailwindcss": "^4.1.12"
  }
}
